<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 边框颜色值 -->
    <item>
        <shape>
            <solid android:color="#F6931E" />
            <corners android:radius="5dp" />
        </shape>
    </item>
    <!--这个是按钮边框设置为四周 并且宽度为1-->
    <item
        android:right="2dp"
        android:left="2dp"
        android:top="2dp"
        android:bottom="2dp">
        <shape>
            <!--这个是背景颜色-->
            <solid android:color="#ffffff" />
        </shape>
    </item>
</layer-list>
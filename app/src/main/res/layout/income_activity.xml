<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_heigh"
            android:background="#F6931E">

            <ImageView
                android:id="@+id/iv_yqweb_back"
                android:layout_width="@dimen/back_size"
                android:layout_height="@dimen/back_size"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="收益表"
                android:textColor="#fff"
                android:textSize="@dimen/title_size" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_title"
            android:layout_alignParentStart="true"
            android:layout_marginTop="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout

                    android:id="@+id/rl_syb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorbar">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="20dp"
                        android:background="@color/colorbar">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_yqll"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="8.00%"
                                android:textColor="@color/white"
                                android:textSize="20sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="预期利率"

                                android:textColor="@color/white"
                                android:textSize="16sp" />
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@color/colorbar">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:src="@mipmap/zhixiang"
                                android:textColor="@color/white"

                                />

                            <TextView
                                android:id="@+id/tv_zjll"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:text="3%"
                                android:textColor="@color/white"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/rl_yq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="40dp"
                        android:background="@color/colorbar">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_yqll2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="18.00%"
                                android:textColor="@color/white"
                                android:textSize="20sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="预期利率"
                                android:textColor="@color/white"
                                android:textSize="16sp" />
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_je"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rl_yq"
                        android:layout_marginTop="40dp">

                        <TextView
                            android:id="@+id/tv_zje"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="20dp"
                            android:text="总金额22222元"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_syzje"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="20dp"
                            android:text="总金额22222元"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                    </RelativeLayout>

                    <View
                        android:id="@+id/v_d"
                        android:layout_width="match_parent"
                        android:layout_height="4px"
                        android:layout_below="@+id/rl_je"
                        android:layout_marginTop="10dp"
                        android:background="@color/black"></View>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/v_d"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp">

                        <TextView
                            android:id="@+id/tv_qtje"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="20dp"
                            android:text="起投金额2222"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_qx"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="20dp"
                            android:text="项目期限12个月"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                    </RelativeLayout>


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8px"
                    android:layout_below="@+id/rl_syb"
                    android:background="@color/diver_line"></View>

                <TextView
                    android:id="@+id/tv_yq"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@+id/rl_syb"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:text="预期利率收益表"
                    android:textSize="18sp" />

                <View
                    android:id="@+id/v_yq"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_below="@+id/tv_yq"
                    android:background="@color/diver_line"></View>

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/lc"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_below="@+id/v_yq"
                    android:layout_alignParentStart="true"

                    >


                </com.github.mikephil.charting.charts.LineChart>


                <View
                    android:id="@+id/v_lc"
                    android:layout_width="match_parent"
                    android:layout_height="3px"
                    android:layout_below="@+id/lc"
                    android:layout_marginTop="10dp"
                    android:background="@color/diver_line">

                </View>

                <TextView
                    android:id="@+id/tv_ts"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@+id/v_lc"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:text="提示：最多投资12期，每期锁定1个月"
                    android:textSize="18sp" />

                <View
                    android:id="@+id/v_ts"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_below="@+id/tv_ts"
                    android:background="@color/diver_line"></View>

                <ImageView
                    android:id="@+id/iv_syb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/v_ts"
                    android:layout_marginTop="10dp"

                    android:src="@mipmap/liyibiao" />
            <TextView
                android:layout_below="@+id/iv_syb"
                android:layout_width="match_parent"
                android:layout_height="50dp" />


            </RelativeLayout>

        </ScrollView>
        <TextView
            android:id="@+id/tv_istz"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorbar"
            android:gravity="center"


            android:text="未投资"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </RelativeLayout>
</LinearLayout>
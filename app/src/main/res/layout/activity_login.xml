<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.account.LoginActivity">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/title_heigh">

      <ImageView
          android:id="@+id/back"
          android:layout_width="@dimen/back_size"
          android:layout_height="@dimen/back_size"
          android:src="@mipmap/fan_hui"
        android:layout_centerVertical="true"
          android:layout_alignParentLeft="true"
          android:layout_marginLeft="10dp"/>

      <TextView
          android:id="@+id/reg"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_marginRight="10dp"
          android:text="注册"
          android:layout_alignParentRight="true"
          android:textSize="20sp"
          android:onClick="goReg"/>




  </RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="20dp"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"

        android:src="@mipmap/logo"
        android:id="@+id/iv_logo"
     android:layout_centerInParent="true"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="租来赚"
        android:textColor="#F6931E"
        android:textSize="24sp"
       android:layout_below="@+id/iv_logo"
      android:layout_centerHorizontal="true"
        />



</RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_phone"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/zhang_hu2" />


        <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@null"
            android:inputType="phone"
            android:textSize="16sp"
            android:textColorHint="@color/grey_word"
            style="?android:attr/textViewStyle"
            android:layout_marginLeft="15dp"
            android:hint="@string/sysjhm"
            android:id="@+id/et_phone"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/iv_phone"
            tools:ignore="LabelFor" />


    </RelativeLayout>
        <View
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:background="#EDEDED"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_height="1dp"></View>
        <RelativeLayout
            android:layout_width="300dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/mi_ma" />


            <EditText
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:background="@null"
                android:textSize="16sp"
                android:textColorHint="@color/grey_word"
                android:layout_centerVertical="true"
                android:inputType="textPassword"
                style="?android:attr/textViewStyle"
                android:layout_marginLeft="15dp"
                android:hint="@string/srmm"
                android:id="@+id/et_pwd"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/iv_pwd"
                tools:ignore="LabelFor" />


        </RelativeLayout>
        <View
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:background="#EDEDED"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="1dp"></View>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="忘记密码"
          android:layout_marginTop="5dp"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:onClick="goForgetPassword"
            />
        <RelativeLayout

            android:layout_width="250dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:background="@color/colorbar"
            android:layout_below="@+id/rl_logpwd"
            android:layout_marginTop="25dp"
            android:id="@+id/bt_login"
            android:layout_gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:onClick="goUserCenter"
            android:layout_height="40dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="#fafafa"
                android:textSize="18dp"
                android:text="@string/login"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorbar"
            android:textSize="16sp"
            android:onClick="loginByYzm"
            android:text="@string/yzmdl"/>


    </LinearLayout>





    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">





    </RelativeLayout>
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#fafafa"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="2dp"
                android:layout_marginTop="9dp"
                android:layout_weight="2"
                android:scaleType="fitXY"
                android:src="@mipmap/heng_xian" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_weight="3"
                android:text="其他方式登陆"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="2dp"
                android:layout_marginTop="9dp"
                android:layout_weight="2"
                android:scaleType="fitXY"
                android:src="@mipmap/heng_xian" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/iv_qqlogin"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="30dp"
                android:scaleType="fitXY"
                android:src="@mipmap/qq_icon" />

            <ImageView
                android:id="@+id/iv_wxlogin"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:src="@mipmap/wei_xin_icon" />

            <ImageView

                android:id="@+id/iv_wblogin"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="32dp"
                android:scaleType="fitXY"
                android:src="@mipmap/wei_bo_icon" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="#fafafa"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:text="*轻触上方按钮即视为同意"
                android:textColor="#000"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:text="服务协议"
                android:id="@+id/tv_fwxy"
                android:textColor="#F6931E"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:text="和"
                android:textColor="#000"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:text="隐私政策"
                android:id="@+id/tv_yszc"
                android:textColor="#F6931E"
                android:textSize="15sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.account.FilteringFinancialRecordActivity"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_heigh"
        android:background="#F6931E">

        <ImageView

            android:id="@+id/iv_ddsx_back"
            android:layout_width="@dimen/back_size"
            android:layout_height="@dimen/back_size"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/back" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单筛选"
            android:textSize="@dimen/title_size"
            android:layout_centerInParent="true"
            android:textColor="#fff"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="按日期筛选"
        android:textColor="#3b3c3e"
        android:textSize="20sp"
        android:padding="10dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="起始日期"
                android:textColor="#9e9e9e"
                android:textSize="20sp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择开始日期"
                android:textColor="#9e9e9e"
                android:id="@+id/tv_ksrq_dd"
                android:textSize="20sp"
                android:layout_marginLeft="135dp"
                android:layout_marginTop="15dp"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="22dp"
                android:src="@mipmap/ri_qi"
                android:id="@+id/iv_xzks_dd"
                android:scaleType="fitXY"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="3dp"
            android:background="@color/diver_line"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"></View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="终止日期"
                android:textColor="#9e9e9e"
                android:textSize="20sp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择终止日期"
                android:id="@+id/tv_jsrq_dd"
                android:textColor="#9e9e9e"
                android:textSize="20sp"
                android:layout_marginLeft="135dp"
                android:layout_marginTop="15dp"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="22dp"
                android:src="@mipmap/ri_qi"
                android:id="@+id/iv_xzjs_dd"
                android:scaleType="fitXY"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"/>
        </RelativeLayout>
    </RelativeLayout>

    <Button
        android:layout_width="@dimen/bt_with"
        android:layout_height="@dimen/bt_hiegt"
        android:background="@color/colorbar"
        android:layout_marginTop="50dp"
        android:id="@+id/bt_cx_dd"
        android:layout_gravity="center_horizontal"
        android:textColor="#fff"
        android:text="确认查询"
        android:textSize="@dimen/bt_size"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="按类型筛选"
        android:textColor="#3b3c3e"
        android:paddingLeft="10dp"
        android:paddingTop="30dp"
        android:textSize="20sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:text="提现"
            android:layout_marginLeft="10dp"
            android:background="@drawable/etsr"
            android:textSize="20sp"
            android:textColor="#9e9e9e"
            android:id="@+id/tv_tx_dd"
            android:gravity="center"
            android:layout_height="40dp" />
        <TextView
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:textSize="20sp"
            android:id="@+id/tv_cz_dd"
            android:textColor="#9e9e9e"
            android:background="@drawable/etsr"
            android:layout_width="100dp"
            android:text="充值"
            android:layout_height="40dp" />
    </LinearLayout>
</LinearLayout>
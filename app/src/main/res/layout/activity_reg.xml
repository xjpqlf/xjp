<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.account.Reg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          android:layout_centerInParent="true"
            android:padding="5dp"
            android:text="注册"
                  android:id="@+id/tv_reg"
            android:textColor="#2c2c2c"
            android:textStyle="bold"
            android:textSize="24sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/tv_reg"
            android:background="@color/grey_word"
            ></View>


    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
      android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="#FAFAFA"

            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
             android:layout_gravity="center_vertical"
                android:src="@mipmap/zhang_hu2" />

            <EditText
                android:id="@+id/et_account"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                 android:background="@null"
                android:inputType="phone"
                android:hint="请输入手机号"
                android:paddingLeft="10dp" />

        </LinearLayout>
        <View
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/grey_word"
            >


        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="#FAFAFA"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"

               android:layout_gravity="center_vertical"
                android:src="@mipmap/yan_zheng" />

            <EditText
                android:id="@+id/et_yzm"
                android:layout_width="185dp"
                android:layout_height="50dp"
                android:inputType="number"
                android:hint="短信验证码"
                android:background="@null"
                android:paddingLeft="10dp" />

            <ImageView
                android:layout_width="1px"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:src="@mipmap/shu_xian" />

            <TextView
                android:background="@null"
                android:id="@+id/btn_getcode"
                android:layout_width="wrap_content"
                android:padding="4dp"
                android:layout_height="40dp"
                android:paddingLeft="7dp"
                android:gravity="center"



                android:text="获取验证码"
                android:textSize="14sp" />
        </LinearLayout>
        <View
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/grey_word"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="#FAFAFA"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:scaleType="fitXY"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/mi_ma" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@null"
                android:inputType="textPassword"
                android:hint="密码，6~16位字符"
                android:paddingLeft="10dp" />



        </LinearLayout>
        <View
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/grey_word"
           />

        <Button
            android:id="@+id/btn_reg_login"
            android:layout_width="@dimen/bt_with"
            android:layout_height="@dimen/bt_hiegt"
            android:background="@color/colorbar"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/bt_size"
            android:textColor="#fff"
            android:text="注册并登录"/>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="#fafafa"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:text="*轻触上方按钮即视为同意"
                android:textColor="#000"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:text="服务协议"
                android:id="@+id/tv_fwxy"
                android:textColor="#F6931E"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:text="和"
                android:textColor="#000"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:text="隐私政策"
                android:id="@+id/tv_yszc"
                android:textColor="#F6931E"
                android:textSize="15sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
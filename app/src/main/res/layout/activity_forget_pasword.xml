<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.account.ForgetPaswordActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_heigh"
        android:background="@color/colorbar">

        <ImageView
            android:layout_width="@dimen/back_size"
            android:layout_height="@dimen/back_size"
             android:id="@+id/iv_forget_back"
            android:src="@mipmap/back"
            android:layout_centerVertical="true"

            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forgetpwd"
            android:textSize="@dimen/title_size"
            android:layout_centerInParent="true"
            android:textColor="#fff"/>
    </RelativeLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
      android:layout_marginLeft="20dp"
        android:id="@+id/et_forget_phone"
        android:layout_marginRight="20dp"
        android:hint="填写11位手机号码"/>    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">
        
        <EditText
            android:layout_width="410dp"
            android:layout_height="60dp"
            android:paddingLeft="20dp"
            android:id="@+id/et_forget_yzm"
            android:layout_marginRight="-200dp"
            android:hint="输入验证码"/>
        
        <ImageView
            android:layout_width="2dp"
            android:layout_height="35dp"
            android:src="@mipmap/shu_xian"
            android:scaleType="fitXY"
            android:layout_marginTop="15dp"/>

        <TextView
            android:background="@null"
            android:id="@+id/btn_getcodes"
            android:layout_width="wrap_content"
            android:padding="4dp"
            android:layout_height="40dp"
            android:paddingLeft="7dp"
            android:gravity="center"



            android:text="获取验证码"
            android:textSize="14sp" />
        
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="@string/next"
        android:textColor="#F6931E"
        android:id="@+id/bt_forget_next"
        android:background="@drawable/laese_back"
        android:textSize="22sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.account.IncomeAndExpenditureActivity"
    android:background="#fff"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_heigh"
        android:background="#F6931E">
        <ImageView
            android:id="@+id/iv_shzhjl_back"
            android:layout_width="@dimen/back_size"
            android:layout_height="@dimen/back_size"
            android:src="@mipmap/back"
            android:layout_alignParentLeft="true"
           android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>

        <android.support.design.widget.TabLayout
            android:id="@+id/tl_tab"
            app:tabTextAppearance="@android:style/TextAppearance.Holo.Medium"
         android:layout_centerHorizontal="true"
            app:tabSelectedTextColor="@color/white"
            app:tabTextColor="@color/white"

            android:layout_width="wrap_content"
            app:tabIndicatorColor="@color/white"
            android:layout_height="wrap_content"
            android:background="@color/colorbar">
        </android.support.design.widget.TabLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="筛选"
            android:id="@+id/tv_sx"
            android:layout_alignParentRight="true"
            android:textColor="#fff"
            android:textSize="16sp"
           android:layout_centerVertical="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

</LinearLayout>
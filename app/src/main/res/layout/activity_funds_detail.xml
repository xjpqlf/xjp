<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.account.FundsDetailActivity"

    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_heigh"
        android:background="#F6931E">

        <ImageView
            android:id="@+id/iv_zjmx_back"
            android:layout_width="@dimen/back_size"
            android:layout_height="@dimen/back_size"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"

            android:src="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/funds_detail"
            android:textColor="#fff"
            android:textSize="@dimen/title_size" />

        <ImageView
            android:id="@+id/iv_szmx"
            android:layout_width="20dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"

              android:layout_centerVertical="true"
            android:src="@mipmap/cha_xun" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#fff"

       >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的余额(元)"
            android:id="@+id/tv_kyye"
            android:textColor="@color/zijmxc"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:layout_marginTop="20dp"
            android:id="@+id/tv_ye_num"
            android:layout_below="@+id/tv_kyye"
            android:textSize="30sp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="8dp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="#fff"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <ImageView
                android:layout_centerVertical="true"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@mipmap/icon_red"
                android:scaleType="fitXY"
                android:id="@+id/iv_zzc"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="80dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:text="总资产"
                android:id="@+id/tv_zzc"
                android:textColor="@color/zijmxc"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/iv_zzc"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="0.00"
                android:textColor="@color/zijmxc"
                android:id="@+id/tv_zzcnum"
                android:layout_marginLeft="40dp"
               android:layout_toRightOf="@+id/tv_zzc"
                android:textSize="18sp"
                android:layout_marginTop="2dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <ImageView
                android:layout_centerVertical="true"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@mipmap/icon_yellow2"
                android:scaleType="fitXY"
                android:id="@+id/iv_yzje"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="80dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:text="已赚金额"
                android:id="@+id/tv_yzje"
                android:textColor="@color/zijmxc"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/iv_yzje"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="0.00"
                android:textColor="@color/zijmxc"
                android:id="@+id/tv_yzjenum"
                android:layout_marginLeft="40dp"
                android:layout_toRightOf="@+id/tv_yzje"
                android:textSize="18sp"
                android:layout_marginTop="2dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <ImageView
                android:layout_centerVertical="true"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@mipmap/icon_yellow2"
                android:scaleType="fitXY"
                android:id="@+id/iv_tzje"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="80dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:text="投资金额"
                android:id="@+id/tv_tzje"
                android:textColor="@color/zijmxc"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/iv_tzje"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="0.00"
                android:textColor="@color/zijmxc"
                android:id="@+id/tv_tzjenum"
                android:layout_marginLeft="40dp"
                android:layout_toRightOf="@+id/tv_tzje"
                android:textSize="18sp"
                android:layout_marginTop="2dp"/>
        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#eee"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#fff"
       android:gravity="center_vertical"
        android:layout_marginTop="3dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="回账概览"
            android:textColor="@color/zijmxc"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"/>
        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:scaleType="fitXY"
            android:src="@mipmap/wen_ti"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="90dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eee"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#fff"
        android:id="@+id/ll_hzgk"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="在租4笔"
                android:id="@+id/tv_zz"
                android:textColor="@color/zijmxc"
                android:textSize="18sp"

                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textSize="18sp"
                android:id="@+id/tv_zznum"
                android:textColor="@color/zijmxc"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_tz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="退租4笔"
                android:textSize="18sp"
                android:textColor="@color/zijmxc"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:id="@+id/tv_tznum"
                android:textSize="20sp"
                android:textColor="@color/zijmxc"

                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_zm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="租满1笔"
                android:textSize="18sp"
                android:textColor="@color/zijmxc"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:id="@+id/tv_zmnum"
                android:textSize="18sp"
                android:textColor="@color/zijmxc"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
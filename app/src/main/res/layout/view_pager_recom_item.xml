<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


     <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="140dp">

               <RelativeLayout
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1">

                   <ImageView
                       android:layout_width="145dp"
                       android:layout_height="106dp"
                       android:id="@+id/iv_recom"
                       android:layout_centerInParent="true"
                       android:scaleType="fitXY"
                       android:src="@mipmap/tuijian_banner" />

               </RelativeLayout>
               <RelativeLayout
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1">

                   <LinearLayout
                       android:id="@+id/ll_ljjr"
                       android:layout_width="123dp"
                       android:layout_height="106dp"
                       android:layout_centerInParent="true"
                       android:orientation="vertical">

                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal">

                           <TextView
                               android:id="@+id/benjinNunber"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="6.0 +"
                               android:textSize="21dp" />


                           <TextView
                               android:id="@+id/lilvNumber"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="4.00%"
                               android:textColor="#FF8A00"
                               android:textSize="21dp" />
                       </LinearLayout>

                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal"
                           android:paddingLeft="5dp">

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="服务租期: "
                               android:textSize="14dp" />

                           <TextView
                               android:id="@+id/tv_fwzq"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="三个月"
                               android:textSize="14dp" />
                       </LinearLayout>

                       <TextView
                           android:id="@+id/xinZuYiCi"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="12dp"
                           android:text="新手专享，限租一次"
                           android:textSize="10dp"
                           android:paddingTop="5dp"/>

                       <RelativeLayout
                           android:id="@+id/rl_ljjr"
                           android:layout_width="match_parent"
                           android:layout_height="35dp"
                           android:layout_marginTop="5dp"
                           android:layout_marginRight="10dp"
                           android:background="#FF8A00">

                           <TextView
                               android:id="@+id/tv_go"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_centerInParent="true"
                               android:text="立即加入"
                               android:textColor="#ffffff"
                               android:textSize="20dp" />
                       </RelativeLayout>
                   </LinearLayout>
               </RelativeLayout>
           </LinearLayout>




</LinearLayout>
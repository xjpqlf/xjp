<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="【租来赚】来租" />
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/rate_item"
            android:layout_gravity="center"
            android:id="@+id/tv_lease_rate"
            android:text="9.6%"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/lease_rate"
            android:textSize="14sp"
            android:text="历史年回报收益率"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/tv_receivable"
            android:textColor="@color/lease_rate"
            android:textSize="14sp"
            android:text="来租金额：9999,.99"/>

    </LinearLayout>


    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#3b3b3b"
            android:textSize="16sp"
            android:id="@+id/tv_blank"
            android:text="" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/lease_rate"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:id="@+id/tv_qishu"

            android:text="12/18" />
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/lease_rate"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:text="剩余/总期数"/>



    </LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_alignParentRight="true"
    >
    <TextView
        android:layout_margin="10dp"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:background="@color/colorbar"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/tv_islease"

        android:text="@string/haslease"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_amount_lease"
        android:text="应收金额:12311.22"/>
</LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/diBu">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--轮播图部分-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="170dp">
                    <LinearLayout
                        android:id="@+id/ll_vp_fw"
                        android:layout_width="match_parent"
                        android:layout_height="170dp">

                        <cn.bingoogolapple.bgabanner.BGABanner
                            android:id="@+id/goods_detail_banner"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:banner_pageChangeDuration="1000"
                            app:banner_pointAutoPlayInterval="2000"
                            app:banner_pointAutoPlayAble="true"
                            app:banner_pointContainerBackground="@android:color/transparent"
                            app:banner_pointDrawable="@drawable/bga_banner_selector_point_hollow"
                            app:banner_pointTopBottomMargin="15dp"
                            app:banner_transitionEffect="alpha" />

                    </LinearLayout>
                    <!--返回-->
                    <ImageView
                        android:id="@+id/iv_goods_detail_back"
                        android:layout_width="12dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/fan_hui_hui3x"
                        />
                    <ImageView
                        android:id="@+id/iv_goods_detail_msg"
                        android:layout_width="12dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/xiao_xi"
                        />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="5dp"
                    android:background="#F6931E">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/tv_fwzq_fw"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            android:textSize="16sp"
                            android:text="三个月"
                            />
                        <TextView
                            android:id="@+id/fuWuZuQi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_below="@+id/tv_fwzq_fw"
                            android:textColor="#fff"
                            android:text="服务租期"
                            />

                    </RelativeLayout>
                    <!--中间-->
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/tv_hbsy_q"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="#fff"
                            android:textSize="16sp"
                            android:text="6.00+22%"
                            />

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_below="@+id/tv_hbsy_q"
                            android:textColor="#fff"
                            android:text="回报收益率"
                            />

                    </RelativeLayout>
                    <!--右边-->
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/tv_tzze_fw"
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            android:textSize="16sp"
                            android:text="73,800.00"
                            />
                        <TextView
                            android:id="@+id/touZiZongE"
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_tzze_fw"
                            android:textColor="#fff"
                            android:text="投资总额(元)"
                            />
                    </RelativeLayout>
                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/fen_lan_xian2x"
                    />
                <!--  服务租期部分-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textSize="20sp"
                        android:textColor="#000"
                        android:text="服务租期"
                        />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/fen_lan_xian2x"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">
                        <!--左边-->
                        <TextView
                            android:id="@+id/tv_kstzrq"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2018-09-13"
                            />
                        <TextView
                            android:id="@+id/kaiShiShiJian"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_kstzrq"
                            android:text="开始投资"
                            />
                        <!--右边-->
                        <TextView
                            android:id="@+id/tv_dqtzrq"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="2019-01-13"
                            />
                        <TextView
                            android:id="@+id/daoQiShiJian"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignLeft="@+id/tv_dqtzrq"
                            android:layout_below="@+id/tv_dqtzrq"
                            android:text="到期退租"
                            />
                    </RelativeLayout>
                    <!--进度条-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="2天后开始计算回报"
                            android:textColor="#fff"
                            />
                        <ProgressBar
                            android:id="@+id/weekBar"
                            style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="18dp"
                            android:scaleY="4"
                            android:layout_marginTop="10dp"
                            android:progress="30" />
                    </RelativeLayout>
                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/fen_lan_xian2x"
                    />
                <RelativeLayout
                    android:id="@+id/rl_wdyhq"
                    android:layout_width="match_parent"
                    android:layout_height="38dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:text="我的优惠券"
                        />
                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginTop="8dp"
                        android:layout_toLeftOf="@+id/qianJing"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/quan_bao3x"
                        />
                    <ImageView
                        android:id="@+id/qianJing"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginTop="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/qian_jin"
                        />
                </RelativeLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/fen_lan_xian2x"
                    />
                <RelativeLayout
                    android:id="@+id/rl_qybz"
                    android:layout_width="match_parent"
                    android:layout_height="38dp">
                    <ImageView
                        android:id="@+id/qianYi"
                        android:layout_width="22dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="8dp"
                        android:layout_height="22dp"
                        android:src="@mipmap/an_quan2x"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_toRightOf="@+id/qianYi"
                        android:layout_marginLeft="10dp"
                        android:text="权益保障"
                        />
                    <TextView
                        android:id="@+id/tv_cunguan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_toLeftOf="@+id/qianJing2"
                        android:layout_marginRight="15dp"
                        android:text="银行存管"
                        />
                    <ImageView
                        android:id="@+id/qianJing2"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginTop="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/qian_jin"
                        />
                </RelativeLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/fen_lan_xian2x"
                    />
                <!--滑动菜单-->
                <android.support.design.widget.TabLayout
                    android:id="@+id/tl_abt1"
                    app:tabTextAppearance="@android:style/TextAppearance.Holo.Medium"
                    android:layout_centerHorizontal="true"
                    app:tabSelectedTextColor="@color/colorbar"
                    app:tabTextColor="@color/black"
                    android:layout_width="match_parent"
                    app:tabGravity="fill"
                    app:tabMode="fixed"
                    app:tabIndicatorColor="@color/colorbar"
                    android:layout_height="wrap_content"
                    android:background="@color/white">
                </android.support.design.widget.TabLayout>

                <!--菜单中的类容-->
                <ui.zlz.widget.ViewPagerForScrollView
                    android:id="@+id/vp_abt1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </ui.zlz.widget.ViewPagerForScrollView>



                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:scaleType="fitXY"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/fen_lan_xian2x"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">
                    <!--1-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:textSize="16dp"
                            android:text="费率说明"/>
                    </RelativeLayout>
                    <!--2-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="提前退出说明"/>
                        <TextView
                            android:id="@+id/tv_tqtzshm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="授权出租的本金的2%"/>
                    </RelativeLayout>
                    <!--3-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="服务费用"/>
                        <TextView
                            android:id="@+id/tv_fwfyshm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="超出参考回报部分作为服务费"/>
                    </RelativeLayout>
                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:scaleType="fitXY"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/fen_lan_xian2x"
                    />
                <RelativeLayout
                    android:id="@+id/rl_fxtshsh"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/fengXianTiShi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="风险提示书"
                    />
                    <ImageView
                        android:id="@+id/fengXianTiShi_Id"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/qian_jin"
                        />
                </RelativeLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/fen_lan_xian2x"
                    />
                <RelativeLayout
                    android:id="@+id/rl_lzht"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:id="@+id/laiZuHeTong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:text="来租合同"
                        />
                    <ImageView
                        android:id="@+id/laiZuHeTong_Id"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/qian_jin"
                        />
                </RelativeLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/fen_lan_xian2x"
                    />

            </LinearLayout>
        </ScrollView>

        <!--底部输入金e-->
        <LinearLayout
            android:id="@+id/diBu"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#27f6951e">

                <TextView
                    android:id="@+id/tv_tp_syze"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#F6931E"
                    android:layout_marginLeft="10dp"
                  android:layout_centerVertical="true"
                    android:text="剩余可投资金额 32,453.00元"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <ImageView
                    android:id="@+id/money3x"
                    android:layout_width="16dp"
                    android:layout_height="18sp"
                    android:layout_marginTop="22dp"
              android:layout_centerVertical="true"
                    android:scaleType="fitXY"
                    android:src="@mipmap/money3x"
                    />
                <RelativeLayout
                    android:layout_toRightOf="@+id/money3x"
                    android:layout_width="wrap_content"
                    android:id="@+id/ll_je"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content">
                <ui.zlz.widget.ClearEditText
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                   android:inputType="number"
                 android:layout_centerVertical="true"
                    style="?android:attr/textViewStyle"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/et_je"
                     android:hint="输入金额 "
                    android:textColorHint="#999"
                   />

                </RelativeLayout>
                <ImageView
                    android:id="@+id/iv_ljtz_btn"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/ll_je"

                    android:src="@mipmap/liji_touzi" />

            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".welfare.NewersDetailsMissionActivity"
    android:orientation="vertical"
    android:background="#eee">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_heigh"
        android:background="#F6931E">

        <ImageView
            android:id="@+id/iv_xsrwxq_back"
            android:layout_width="@dimen/back_size"
            android:layout_height="@dimen/back_size"
            android:src="@mipmap/back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新手任务详情"
            android:textSize="@dimen/title_size"
            android:layout_centerInParent="true"
            android:textColor="#fff"/>
        <ImageView
            android:id="@+id/iv_xsrwxq_fx"
            android:layout_width="@dimen/back_size"
            android:layout_height="@dimen/back_size"
            android:src="@mipmap/fen_xaing"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_margin="10dp"
        android:text="任务要求"/>
    <view
        android:layout_width="380dp"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"></view>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:src="@mipmap/xinshou"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="75dp"
            android:text="当月投资满1万"
            android:layout_marginTop="18dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="22dp"
            android:layout_marginRight="15dp"
            android:text="未完成"/>
    </RelativeLayout>
    <view
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#fff"></view>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="任务奖励"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="完成任务得500积分"
            android:textColor="#F6931E"
            android:layout_marginRight="15dp"
            android:layout_marginTop="13dp"/>
    </RelativeLayout>
    <view
        android:layout_width="380dp"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"></view>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="【任务说明】"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="5dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:lineSpacingExtra="3dp"
        android:paddingLeft="8dp"
        android:textSize="14sp"
        android:text="1.本任务为定期任务，每月仅可完成一次。
2.新用户当月投资租来赚（含月返，包含新手专享，投资金额）可点击领取500积分。
3.每位用户每月仅可获赠本任务奖励一次。"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="【奖励说明】"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="5dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:lineSpacingExtra="3dp"
        android:paddingLeft="8dp"
        android:textSize="14sp"
        android:text="任务奖励为积分，积分值为整数，积分可用在兑换区兑换代金券、加息券等商品；或者参与消耗积分类活动获得福利权限等。"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="【免责声明】"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="5dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:lineSpacingExtra="3dp"
        android:paddingLeft="8dp"
        android:textSize="14sp"
        android:text="1.本活动任务最终解释权归租来赚所有.
2.完成任务后，请在当日及时领取奖励，当日未领取的视为自动放弃本任务奖励"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="【注意】"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="5dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:lineSpacingExtra="3dp"
        android:paddingLeft="8dp"
        android:textSize="14sp"
        android:text="新手任务以新功能上线时间为准，之前完成的不参与本任务。"/>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.account.LoginByYzmActivity"
    android:orientation="vertical"
    android:background="#fff">

    <RelativeLayout
        android:layout_width="match_parent"






        android:layout_height="@dimen/title_heigh"
        android:background="#F6931E"
        >

        <ImageView

           android:id="@+id/iv_chzh_back"
            android:layout_width="@dimen/back_size"
            android:layout_height="@dimen/back_size"
            android:layout_centerVertical="true"

            android:src="@mipmap/back"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="充值"
            android:textSize="@dimen/title_size"
            android:layout_centerInParent="true"
            android:textColor="@color/white"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="金额"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="15dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@null"
            android:textSize="18sp"
            android:layout_marginLeft="-100dp"
            android:paddingLeft="160dp"
            android:hint="请输入充值金额"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/diver_line"
        android:layout_height="1px"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginTop="-10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="15dp"/>
        <EditText

            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="-100dp"
            android:paddingLeft="160dp"
            android:textSize="18sp"
            android:background="@null"
            android:hint="请输入持卡人姓名"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/diver_line"
        android:layout_height="7px"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="身份证"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="15dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textColor="@color/black"
            android:layout_marginLeft="-100dp"
            android:paddingLeft="140dp"
            android:textSize="18sp"
            android:background="@null"
            android:hint="请输入持卡人身份证"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/diver_line"
        android:layout_height="1px"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginTop="-10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预留手机"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="15dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="-100dp"
            android:paddingLeft="120dp"
            android:textSize="18sp"
            android:background="@null"
            android:hint="请输入银行卡绑定手机"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/diver_line"
        android:layout_height="7px"></View>

    <Button




           android:layout_gravity="center"
        android:layout_width="@dimen/bt_with"
        android:layout_height="@dimen/bt_hiegt"
        android:textColor="@color/white"
        android:background="@color/colorbar"

        android:text="充值"


  />



</LinearLayout>
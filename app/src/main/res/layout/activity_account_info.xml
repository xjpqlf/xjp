<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.account.AccountInfoActivity"
    android:orientation="vertical"
    android:background="#EEEEEE">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/crop__bar_height"
        android:background="#FFF">

        <ImageView
            android:layout_width="@dimen/back_size"
            android:layout_height="@dimen/back_size"
        android:layout_centerVertical="true"
            android:id="@+id/iv_back_info"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/fan_hui"
   />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账户信息"
            android:textSize="@dimen/title_size"
            android:layout_centerInParent="true"
            android:textColor="#444"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="#fff"
        android:id="@+id/rl_tx"
        android:layout_marginTop="9dp">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/iv_infotx"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/tou_xiang"
            android:layout_marginLeft="20dp"

            app:civ_border_color="#FF000000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="头像"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_infotx"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            />
        <ImageView
            android:layout_width="@dimen/back_size"
            android:layout_height="@dimen/back_size"
            android:src="@mipmap/qian_jin"
          android:layout_alignParentRight="true"
            android:layout_centerVertical="true"

            android:layout_marginRight="20dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:layout_marginTop="9dp"
        android:background="#fff"
        android:orientation="vertical">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
       android:id="@+id/rl_info"
            android:background="#fff">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人基础信息"
                android:textSize="20sp"
              android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"/>
            <ImageView
                android:layout_width="@dimen/back_size"
                android:layout_height="@dimen/back_size"
                android:src="@mipmap/qian_jin"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
             />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/diver_line"></View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/rl_accsafe"
            android:background="#fff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="账户安全 "
                android:layout_centerVertical="true"
                android:textSize="20sp" />
            <ImageView
                android:layout_width="@dimen/back_size"
                android:layout_height="@dimen/back_size"
                android:src="@mipmap/qian_jin"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/diver_line"></View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/rl_bankcard"
            android:background="#fff">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="银行卡信息"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"/>
            <ImageView
                android:layout_width="@dimen/back_size"
                android:layout_height="@dimen/back_size"
                android:src="@mipmap/qian_jin"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                />
        </RelativeLayout>

    </LinearLayout>
    
    <Button
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:text="@string/out_login"
        android:background="#F6931E"
        android:layout_gravity="center_horizontal"
        android:textSize="22sp"
        android:textColor="#fff"
        android:id="@+id/bt_outlogin"
        android:layout_marginTop="50dp"/>

</LinearLayout>
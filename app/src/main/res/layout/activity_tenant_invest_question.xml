<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".home.HomeBenefit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_heigh"
            android:background="#F6931E"
            android:layout_alignParentTop="true">
            <ImageView
                android:id="@+id/iv_tzxq_back"
                android:layout_width="@dimen/back_size"
                android:layout_height="@dimen/back_size"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="投资详情"
                android:textColor="#fff"
                android:textSize="@dimen/title_size" />
        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_above="@+id/yt">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="#F6931E"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:text="历史年回报收益率"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:background="#F6931E">
                    <TextView
                        android:id="@+id/tv_lshnhbl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:textSize="35dp"
                        android:text="10.8"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/tv_lshnhbl"
                        android:layout_toRightOf="@+id/tv_lshnhbl"
                        android:text="%"
                        android:textColor="#fff"
                        android:textSize="20dp" />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#F6931E">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="50dp">
                        <TextView
                            android:id="@+id/syts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            android:text="权利剩余期限"
                            />
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/syts"
                            >
                            <TextView
                                android:id="@+id/quanLiQiXian_yue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#fff"
                                android:textSize="16dp"
                                android:text="9"
                                />
                            <TextView
                                android:id="@+id/geYue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/quanLiQiXian_yue"
                                android:textColor="#fff"
                                android:textSize="16dp"
                                android:text="个月+"
                                />
                            <TextView
                                android:id="@+id/tv_shyqx_tian"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#fff"
                                android:textSize="16dp"
                                android:layout_toRightOf="@+id/geYue"
                                android:text="26"
                                />
                            <TextView
                                android:id="@+id/tian"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#fff"
                                android:textSize="16dp"
                                android:layout_toRightOf="@+id/tv_shyqx_tian"
                                android:text="天"
                                />
                        </RelativeLayout>
                    </RelativeLayout>
                    <!--中间部分-->
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="50dp">
                        <TextView
                            android:id="@+id/tuiZuE"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            android:text="退租金额" />
                        <TextView
                            android:id="@+id/tv_tuzje"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tuiZuE"
                            android:textColor="#fff"
                            android:textSize="16dp"
                            android:text="623.14"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tuiZuE"
                            android:layout_toRightOf="@+id/tv_tuzje"
                            android:textColor="#fff"
                            android:textSize="16dp"
                            android:text="元"
                            />

                    </RelativeLayout>
                    <!--右边-->
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="50dp">
                        <TextView
                            android:id="@+id/daiShouE"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            android:text="待收金额" />
                        <TextView
                            android:id="@+id/tv_dshje"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/daiShouE"
                            android:textColor="#fff"
                            android:textSize="16dp"
                            android:text="623.14"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/daiShouE"
                            android:layout_toRightOf="@+id/tv_dshje"
                            android:textColor="#fff"
                            android:textSize="16dp"
                            android:text="元"
                            />

                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:background="#F6931E">
                    <TextView
                        android:id="@+id/yuShiJi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:text="剩余时间"
                        />
                    <TextView
                        android:id="@+id/yuShiJiTian_Id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/yuShiJi"
                        android:textColor="#fff"
                        android:text="0"
                        />
                    <TextView
                        android:id="@+id/yuShiJiTian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/yuShiJiTian_Id"
                        android:textColor="#fff"
                        android:text="天"
                        />
                    <TextView
                        android:id="@+id/yuShiJiShi_Id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/yuShiJiTian"
                        android:textColor="#fff"
                        android:text="1"
                        />
                    <TextView
                        android:id="@+id/yuShiJiShi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/yuShiJiShi_Id"
                        android:textColor="#fff"
                        android:text="时"
                        />
                    <TextView
                        android:id="@+id/yuShiJiFen_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/yuShiJiShi"
                        android:textColor="#fff"
                        android:text="3"
                        />
                    <TextView
                        android:id="@+id/yuShiJiFen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/yuShiJiFen_id"
                        android:textColor="#fff"
                        android:text="分"
                        />
                </RelativeLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:background="#F6931E"
                    android:scaleType="fitXY"
                    android:src="@mipmap/gongxing_1"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">
                    <!--1-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="0dp">
                        <TextView
                            android:id="@+id/touZiBian"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="投资编号"
                            />
                        <TextView
                            android:id="@+id/tv_tzbh"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:text="999999"
                            />
                    </RelativeLayout>
                    <!--2-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="0dp">
                        <TextView
                            android:id="@+id/zheKouLv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="折扣利率"
                            />
                        <TextView
                            android:id="@+id/tv_zkll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/bfh"
                            android:text="0.11"
                            />
                        <TextView
                            android:id="@+id/bfh"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:text="%"
                            />

                    </RelativeLayout>
                    <!--3-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="0dp">
                        <TextView
                            android:id="@+id/daiShouLiXi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="待收利息"
                            />
                        <TextView
                            android:id="@+id/tv_dshlx"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/yuan"
                            android:text="0.11"
                            />
                        <TextView
                            android:id="@+id/yuan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:text="元"
                            />

                    </RelativeLayout>
                    <!--4-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="0dp">
                        <TextView
                            android:id="@+id/huiKuanFangShi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="回款方式"
                            />
                        <TextView
                            android:id="@+id/tv_hkfsh"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:text="按月来租等额本息"
                            />

                    </RelativeLayout>
                    <!--5-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="0dp">
                        <TextView
                            android:id="@+id/faBuShiJian"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="发布时间"
                            />
                        <TextView
                            android:id="@+id/tv_fbrq"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/tv_fbshj"
                            android:text="2012-12-12"
                            />
                        <TextView
                            android:id="@+id/tv_fbshj"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:text="12:58:12"
                            />
                    </RelativeLayout>
                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/fen_lan_xian2x"
                    />
                <!--菜单部分-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="-20dp">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <TextView
                            style="@style/MenuTabText"
                            android:id="@+id/tuiZuJiLuMenu"
                            android:height="53dp"
                            android:textSize="18sp"
                            android:layout_alignParentTop="true"
                            android:layout_centerInParent="true"
                            android:text="退租记录" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <TextView
                            style="@style/MenuTabText"
                            android:id="@+id/touZiJiHuaMenu"
                            android:height="53dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerInParent="true"
                            android:clickable="true"
                            android:textSize="18sp"
                            android:text="投资计划" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <TextView
                            style="@style/MenuTabText"
                            android:id="@+id/changJianWenTiMenu"
                            android:height="53dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerInParent="true"
                            android:clickable="true"
                            android:textSize="18sp"
                            android:text="常见问题"
                            />
                        <ImageView
                            android:layout_width="75dp"
                            android:layout_height="1dp"
                            android:id="@+id/xia_hua_xian2"
                            android:layout_below="@+id/changJianWenTiMenu"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentBottom="true"
                            android:src="@mipmap/xia_hua2x"/>
                    </RelativeLayout>
                </LinearLayout>
                <!-- 常见问题-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_question1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textSize="16dp"
                        android:text="@string/questionNo1"
                        />
                    <TextView
                        android:id="@+id/tv_reply1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_below="@+id/tv_question1"
                        android:text="@string/replyTo1"
                        />
                </RelativeLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/fen_lan_xian2x"
                    />
               <!--问题2-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_question2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textSize="16dp"
                        android:text="@string/questionNo2"
                        />
                    <TextView
                        android:id="@+id/tv_reply2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_below="@+id/tv_question2"
                        android:text="@string/replyTo2"
                        />
                </RelativeLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/fen_lan_xian2x"
                    />
                <!--问题3-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_question3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textSize="16dp"
                        android:text="@string/questionNo3"
                        />
                    <TextView
                        android:id="@+id/tv_reply3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_below="@+id/tv_question3"
                        android:text="@string/replyTo3"
                        />
                </RelativeLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/fen_lan_xian2x"
                    />
                <!--问题4-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_question4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textSize="16dp"
                        android:text="@string/questionNo4"
                        />
                    <TextView
                        android:id="@+id/tv_reply4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_below="@+id/tv_question4"
                        android:text="@string/replyTo2"
                        />
                </RelativeLayout>

<!--底部提示-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="#d9cbcbcb"
                        android:gravity="center"
                        android:text="历史年回报收益率不代表实际回报率"
                        />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
<!--底部固定按钮-->
        <ImageView
            android:id="@+id/yt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:layout_alignParentBottom="true"
            android:src="@mipmap/yi_touzi_shouyi" />
    </RelativeLayout>
</LinearLayout>
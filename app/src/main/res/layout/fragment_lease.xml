<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:id="@+id/tv_sort"
                android:textColor="@color/colorbar"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:text="@string/leasing"/>
            <ImageView
                android:layout_marginLeft="2dp"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_toRightOf="@+id/tv_sort"
                android:layout_centerVertical="true"
                android:src="@mipmap/sjc"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/newword_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_centerInParent="true"
                android:id="@+id/tv_amount"
                android:layout_centerVertical="true"
                android:text="@string/leased"/>
            <ImageView
                android:layout_marginLeft="2dp"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_toRightOf="@+id/tv_amount"
                android:layout_centerVertical="true"
                android:src="@mipmap/sjup"/>


        </RelativeLayout>

    </LinearLayout>

    <ListView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:overScrollMode="never"
        android:id="@+id/lv_lease"
        android:background="@color/white"
        android:layout_height="match_parent">

    </ListView>





</LinearLayout>